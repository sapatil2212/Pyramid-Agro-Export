// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  accounts  Account[]
  sessions  Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model HomePageContent {
  id          String   @id @default(cuid())
  section     String   @unique
  title       String?
  subtitle    String?
  description String?  @db.Text
  imageUrl    String?
  buttonText  String?
  buttonLink  String?
  button2Text String?
  button2Link String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model HomePageFeature {
  id          String   @id @default(cuid())
  section     String
  title       String
  description String?  @db.Text
  icon        String?
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model HeroKeyFeature {
  id          String   @id @default(cuid())
  text        String
  icon        String
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model HeroImage {
  id          String   @id @default(cuid())
  imageUrl    String
  altText     String?
  title       String?
  subtitle    String?
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model AboutPageContent {
  id          String   @id @default(cuid())
  section     String
  title       String?
  subtitle    String?
  description String?  @db.Text
  imageUrl    String?
  buttonText  String?
  buttonLink  String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model AboutImage {
  id          String   @id @default(cuid())
  imageUrl    String
  altText     String?
  title       String?
  subtitle    String?
  section     String   // 'story', 'values', 'team', 'certifications'
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model AboutFeature {
  id          String   @id @default(cuid())
  section     String   // 'story', 'values', 'team', 'certifications'
  title       String
  description String?  @db.Text
  icon        String?
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model TeamMember {
  id          String   @id @default(cuid())
  name        String
  position    String
  bio         String?  @db.Text
  expertise   String?  @db.Text // JSON array of expertise areas
  email       String?
  linkedin    String?
  imageUrl    String?
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Certification {
  id          String   @id @default(cuid())
  name        String
  fullName    String
  issuer      String
  validUntil  String?  // Date as string for flexibility
  description String?  @db.Text
  imageUrl    String?  // Certificate image URL
  icon        String?
  color       String?  // CSS color class
  features    String?  @db.Text // JSON array of features
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ProductCategory {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?  @db.Text
  imageUrl    String?
  icon        String?
  color       String?  // CSS color class
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  products    Product[]
}

model Product {
  id                String   @id @default(cuid())
  name              String
  slug              String   @unique
  description       String?  @db.Text
  shortDescription  String?  @db.Text
  imageUrl          String?
  images            String?  @db.Text // JSON array of image URLs
  categoryId        String
  category          ProductCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  
  // Product specifications
  specifications    String?  @db.Text // JSON object
  origin            String?
  seasons           String?  @db.Text // JSON array
  minOrderQuantity  String?
  packaging         String?  @db.Text // JSON array
  price             String?  @db.Text // JSON object with min, max, currency
  availability      String   @default("in-stock") // in-stock, out-of-stock, limited
  
  // Product features
  features          String?  @db.Text // JSON array
  nutritionalInfo   String?  @db.Text // JSON object
  certifications    String?  @db.Text // JSON array
  shelfLife         String?
  storageConditions String?  @db.Text // JSON array
  exportMarkets     String?  @db.Text // JSON array
  
  // Product status
  rating            Float?   @default(0)
  reviews           Int      @default(0)
  isFeatured        Boolean  @default(false)
  isOrganic         Boolean  @default(false)
  isPremium         Boolean  @default(false)
  isActive          Boolean  @default(true)
  
  // Hero section content
  heroTitle         String?  @db.Text
  heroSubtitle      String?  @db.Text
  heroDescription   String?  @db.Text
  heroImageUrl      String?
  heroButtonText    String?
  heroButtonLink    String?
  heroButton2Text   String?
  heroButton2Link   String?
  
  // Features section content
  featuresTitle     String?  @db.Text
  featuresSubtitle  String?  @db.Text
  
  // CTA section content
  ctaTitle          String?  @db.Text
  ctaDescription    String?  @db.Text
  ctaButtonText     String?
  ctaButtonLink     String?
  
  // Nashik Grapes Table content
  tableTitle        String?  @db.Text
  tableDescription  String?  @db.Text
  tableVarieties    String?  @db.Text // JSON array of varieties
  tableSpecs        String?  @db.Text // JSON array of specifications
  tableAdvantages   String?  @db.Text // JSON array of advantages
  
  // Ordering
  order             Int      @default(0)
  
  // Timestamps
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model ProductPreview {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text
  benefits    String?  @db.Text // JSON array of benefits
  imageUrl    String
  link        String
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model GalleryImage {
  id          String   @id @default(cuid())
  imageUrl    String
  altText     String?
  title       String?
  description String?  @db.Text
  section     String   @default("facilities") // 'facilities', 'processing', 'storage', etc.
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Testimonial {
  id          String   @id @default(cuid())
  name        String
  position    String
  company     String
  location    String?
  quote       String   @db.Text
  rating      Int      @default(5) // 1-5 stars
  avatar      String?  // Avatar initial or image URL
  imageUrl    String?  // Profile image URL
  verified    Boolean  @default(true)
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Service {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text
  icon        String   @default("shield") // lucide icon name
  color       String   @default("from-emerald-500 to-emerald-600") // gradient class
  features    String?  @db.Text // JSON array of feature strings
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ExportProcess {
  id          String   @id @default(cuid())
  step        String   // e.g., "01", "02"
  title       String
  description String?  @db.Text
  icon        String   @default("message-circle") // lucide icon name
  color       String   @default("emerald") // color name for styling
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ContactEnquiry {
  id                String   @id @default(cuid())
  name              String
  email             String
  contact           String
  country           String
  productInterested String?
  message           String   @db.Text
  status            EnquiryStatus @default(NEW)
  notes             String?  @db.Text
  isRead            Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

enum EnquiryStatus {
  NEW
  IN_PROGRESS
  RESPONDED
  CLOSED
}

enum Role {
  USER
  ADMIN
}

// Site Settings for logo and contact info
model SiteSettings {
  id              String   @id @default(cuid())
  key             String   @unique
  value           String   @db.Text
  type            String   @default("text") // text, image, json
  description     String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// Page Visit tracking for analytics
model PageVisit {
  id              String   @id @default(cuid())
  page            String   // e.g., "/", "/about", "/products"
  visitorId       String?  // Anonymous visitor identifier
  userAgent       String?  @db.Text
  referrer        String?
  country         String?
  city            String?
  device          String?  // mobile, tablet, desktop
  browser         String?
  sessionId       String?
  createdAt       DateTime @default(now())
  
  @@index([page])
  @@index([createdAt])
  @@index([visitorId])
}

// Notifications for admin dashboard
model Notification {
  id              String   @id @default(cuid())
  type            NotificationType
  title           String
  message         String   @db.Text
  data            String?  @db.Text // JSON data for additional context
  isRead          Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([isRead])
  @@index([createdAt])
}

enum NotificationType {
  ENQUIRY
  PRODUCT_UPDATE
  SETTINGS_UPDATE
  CONTENT_UPDATE
  SYSTEM
}
